<%= form_with(model: fish, local: true) do |form| %>
  <% if fish.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(fish.errors.count, "error") %> prohibited this fish from being saved:</h2>
      <ul>
        <% fish.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :price %>
    <%= form.number_field :price, step: 0.01 %>
  </div>

  <div class="field">
    <%= form.label :species %>
    <%= form.text_field :species %>
  </div>

  <div class="field">
    <%= form.label :size, "Size (in cm)" %>
    <%= form.number_field :size, step: 1 %>
  </div>

  <div class="field">
    <%= form.label :water_type %>
    <%= form.select :water_type, options_for_select(["Freshwater", "Saltwater"], fish.water_type) %>
  </div>

  <div class="field">
    <%= form.label :quantity %>
    <%= form.number_field :quantity, step: 1 %>
  </div>

  <div class="field">
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>

