<%= form_with(model: @sale, local: true) do |form| %>
    <% if @sale.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@sale.errors.count, "error") %> prohibited this sale from being saved:</h2>
        <ul>
          <% @sale.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  
    <div class="field">
      <%= form.label :product_id %>
      <%= form.collection_select :product_id, Product.all, :id, :name, prompt: "Select a product" %>
    </div>
  
    <div class="field">
      <%= form.label :quantity %>
      <%= form.number_field :quantity, min: 1 %>
    </div>
  
    <div class="field">
      <%= form.label :total_price %>
      <%= form.number_field :total_price, step: 0.01, min: 0.01 %>
    </div>
  
    <div class="actions">
      <%= form.submit %>
    </div>
  <% end %>
  