<h1 class="text-3xl font-bold mb-6">Product List</h1>

<!-- Link to add new product -->
<div class="flex justify-end mb-4">
  <%= link_to 'Add New Product', new_product_path, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
</div>

<!-- Table displaying products -->
<table class="min-w-full table-auto mt-4">
  <thead>
    <tr class="text-center text-lg font-bold text-gray-800">
      <th class="px-6 py-4">Product Name</th>
      <th class="px-6 py-4">Price</th>
      <th class="px-6 py-4">Quantity</th>
      <th class="px-6 py-4">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr class="border-t">
        <td class="px-4 py-2"><%= product.name %></td>
        <td class="px-4 py-2"><%= number_to_currency(product.price) %></td>
        <td class="px-4 py-2"><%= product.quantity %></td>
        <td class="px-4 py-2">
          <%= link_to 'Edit', edit_product_path(product), class: "text-blue-500 hover:underline" %> |
          <%= link_to 'Delete', product, method: :delete, data: { confirm: 'Are you sure?' }, class: "text-red-500 hover:underline" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
