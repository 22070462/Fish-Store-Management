<%= form_with model: customer, local: true, class: "space-y-4" do |f| %>
    <!-- Name Field -->
    <div>
      <%= f.label :name, "Customer Name", class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :name, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
    </div>
  
    <!-- Email Field -->
    <div>
      <%= f.label :email, "Email", class: "block text-sm font-medium text-gray-700" %>
      <%= f.email_field :email, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
    </div>
  
    <!-- Phone Field -->
    <div>
      <%= f.label :phone, "Phone", class: "block text-sm font-medium text-gray-700" %>
      <%= f.telephone_field :phone, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
    </div>
  
    <!-- Address Field -->
    <div>
      <%= f.label :address, "Address", class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_area :address, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm", rows: 4 %>
    </div>
  
    <!-- Submit Button -->
    <div>
      <%= f.submit "Save Customer", class: "w-full bg-blue-600 text-white py-2 px-4 rounded-md shadow-md hover:bg-blue-700" %>
    </div>
  <% end %>
  