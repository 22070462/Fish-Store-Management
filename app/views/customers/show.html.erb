<div class="container mx-auto px-4">
  <h1 class="text-2xl font-bold text-gray-800 mb-4">Transactions for <%= @customer.name %></h1>

  <div class="mb-6">
    <p class="text-gray-600"><strong>Email:</strong> <%= @customer.email %></p>
  </div>

  <table class="table-auto border-collapse border border-gray-300 w-full text-left">
    <thead class="bg-gray-100">
      <tr>
        <th class="border border-gray-300 px-4 py-2 text-gray-700 font-semibold">Date</th>
        <th class="border border-gray-300 px-4 py-2 text-gray-700 font-semibold">Amount</th>
        <th class="border border-gray-300 px-4 py-2 text-gray-700 font-semibold">Description</th>
      </tr>
    </thead>
    <tbody>
      <% @transactions.each do |transaction| %>
        <tr class="<%= cycle('bg-white', 'bg-gray-50') %>">
          <td class="border border-gray-300 px-4 py-2 text-gray-600"><%= transaction.created_at.strftime("%Y-%m-%d %H:%M") %></td>
          <td class="border border-gray-300 px-4 py-2 text-gray-600"><%= number_to_currency(transaction.amount) %></td>
          <td class="border border-gray-300 px-4 py-2 text-gray-600"><%= transaction.description.presence || "No description" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
